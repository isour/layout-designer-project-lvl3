mixin chat-form()
  form.chat-form.d-flex.justify-content-between.align-items-center&attributes(attributes)(action = "#")
    input.chat-form-input.flex-grow-1(type = "text" placeholder = "Напишите сообщение...")
    button.chat-form-submit.btn.btn-primary.d-flex.align-items-center.justify-content-center.rounded-circle(type = "submit")
      svg.w-15e.h-15e(fill='currentColor')
        use(xlink:href='./images/icons/sprite.svg#message')
