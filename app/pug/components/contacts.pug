include search.pug

mixin contacts()
  .contacts&attributes(attributes)
    H2.contacts-title.fw-bold.mb-4 Контакты
    +search({"placeholder": "Поиск по контактам"}).messages-form
    each humans, char in contacts
      .contacts-letter.text-muted.mt-5.mb-3 #{char}
      each human in humans
        a.contact.contacts-human.px-3.mb-3(href = "#" title = human.name)
          img.avatar.contact-avatar(src = human.avatar alt = human.name)
          .contact-content.py-4.px-4
            .contact-name #{human.name}
            .contact-status #{human.status}


